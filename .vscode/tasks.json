{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "organize-csharp-file",
      "type": "process",
      "command": "csharp-organizer",
      "args": [
        "${file}"
      ],
      "group": "none",
      "presentation": {
        "reveal": "never",
        "panel": "shared",
        "showReuseMessage": false
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "organize-csharp-project",
      "type": "process",
      "command": "csharp-organizer",
      "args": [
        "${workspaceFolder}/src"
      ],
      "group": "none",
      "presentation": {
        "reveal": "never",
        "panel": "shared",
        "showReuseMessage": false
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "./src/CSharpOrganizer.slnx",
        "/property:GenerateFullPaths=true",
      ],
      "problemMatcher": "$msCompile",
      "presentation": {
        "clear": true,
        "echo": true,
        "reveal": "never",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "format",
      "command": "csharpier",
      "type": "process",
      "args": [
        "format",
        "./src/"
      ],
      "problemMatcher": [],
      "presentation": {
        "clear": true,
        "echo": true,
        "reveal": "never",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "test",
      "command": "dotnet",
      "type": "process",
      "args": [
        "test",
      ],
      "options": {
        "cwd": "${workspaceFolder}/src/CSharpOrganizer.Tests"
      },
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "test",
        "isDefault": false
      },
      "presentation": {
        "clear": true
      }
    },
    {
      "label": "run",
      "command": "dotnet",
      "type": "process",
      "args": [
        "run",
      ],
      "options": {
        "saveBeforeRun": "allFiles",
        "cwd": "${workspaceFolder}/src/CSharpOrganizer"
      },
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "clear": true
      }
    },
    {
      "label": "test-watch",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "test",
        "--verbosity",
        "quiet"
      ],
      "options": {
        "cwd": "${workspaceFolder}/src/Koalas.Tests"
      },
      "problemMatcher": "$msCompile",
      "group": "test",
      "presentation": {
        "clear": true,
        "echo": true,
        "reveal": "never",
        "focus": false,
        "panel": "shared"
      },
      "isBackground": true
    }
  ]
}
