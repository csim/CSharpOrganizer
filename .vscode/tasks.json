{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "csharply-organize-file",
      "type": "process",
      "command": "csharply",
      "args": [
        "organize",
        "${file}"
      ],
      "group": "none",
      "presentation": {
        "reveal": "never",
        "panel": "shared",
        "showReuseMessage": false
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "csharply-organize-folder",
      "type": "process",
      "command": "csharply",
      "args": [
        "organize",
        "${workspaceFolder}"
      ],
      "group": "none",
      "presentation": {
        "reveal": "never",
        "panel": "shared",
        "showReuseMessage": false
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "./src/CSharply.slnx",
        "/property:GenerateFullPaths=true",
      ],
      "problemMatcher": "$msCompile",
      "presentation": {
        "clear": true,
        "echo": true,
        "reveal": "never",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "format",
      "command": "csharpier",
      "type": "process",
      "args": [
        "format",
        "./src/"
      ],
      "problemMatcher": [],
      "presentation": {
        "clear": true,
        "echo": true,
        "reveal": "never",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "test",
      "command": "dotnet",
      "type": "process",
      "args": [
        "test",
      ],
      "options": {
        "cwd": "${workspaceFolder}/src/CSharply.Tests"
      },
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "test",
        "isDefault": false
      },
      "presentation": {
        "clear": true
      }
    },
    // ------- RUN ctrl+shift+q -----------------------------
    // {
    //   "label": "run",
    //   "command": "dotnet",
    //   "type": "process",
    //   "args": [
    //     "run",
    //     "--debug"
    //   ],
    //   "options": {
    //     "saveBeforeRun": "allFiles",
    //     "cwd": "${workspaceFolder}/src/CSharply"
    //   },
    //   "problemMatcher": "$msCompile",
    //   "group": {
    //     "kind": "test",
    //     "isDefault": true
    //   },
    //   "presentation": {
    //     "clear": true
    //   }
    // },
    {
      "label": "run",
      "command": "dotnet",
      "type": "process",
      "args": [
        "test",
        "--logger",
        "console;verbosity=detailed"
      ],
      "options": {
        "saveBeforeRun": "allFiles",
        "cwd": "${workspaceFolder}/src/CSharply.Tests"
      },
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "clear": true
      }
    },
    // --------------------------------------------
    {
      "label": "test-watch",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "test",
        "--verbosity",
        "quiet"
      ],
      "options": {
        "cwd": "${workspaceFolder}/src/Koalas.Tests"
      },
      "problemMatcher": "$msCompile",
      "group": "test",
      "presentation": {
        "clear": true,
        "echo": true,
        "reveal": "never",
        "focus": false,
        "panel": "shared"
      },
      "isBackground": true
    }
  ]
}