{
  "name": "csharp-organizer",
  "displayName": "CSharp Organizer",
  "description": "Organizes C# code files using Roslyn",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Formatters",
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "csharp-organizer.organize",
        "title": "Organize C# File",
        "category": "CSharp Organizer"
      },
      {
        "command": "csharp-organizer.organizeAll",
        "title": "Organize All C# Files",
        "category": "CSharp Organizer"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "csharp-organizer.organize",
          "when": "resourceExtname == .cs",
          "group": "1_modification"
        }
      ],
      "explorer/context": [
        {
          "command": "csharp-organizer.organize",
          "when": "resourceExtname == .cs",
          "group": "1_modification"
        },
        {
          "command": "csharp-organizer.organizeAll",
          "when": "explorerResourceIsFolder",
          "group": "1_modification"
        }
      ]
    },
    "keybindings": [
      {
        "command": "csharp-organizer.organize",
        "key": "ctrl+shift+o",
        "when": "resourceExtname == .cs"
      }
    ],
    "configuration": {
      "title": "CSharp Organizer",
      "properties": {
        "csharpOrganizer.executablePath": {
          "type": "string",
          "default": "csharp-organizer",
          "description": "Path to the CSharp Organizer executable"
        },
        "csharpOrganizer.organizeOnSave": {
          "type": "boolean",
          "default": false,
          "description": "Automatically organize C# files on save"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  }
}
